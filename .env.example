# DeployPilot Agent Configuration

# Required: Token from DeployPilot Backend
SERVER_TOKEN=your-server-token-here

# Required: Backend API URL
BACKEND_URL=https://api.deploypilot.stefankunde.dev

# Optional: Polling interval for commands (default: 10000ms)
POLL_INTERVAL_MS=10000

# Optional: Heartbeat interval (default: 30000ms)
HEARTBEAT_INTERVAL_MS=30000

# Optional: Log level (debug, info, warn, error)
LOG_LEVEL=info

# Optional: Maximum concurrent commands (default: 3)
MAX_CONCURRENT_COMMANDS=3

# Optional: HTTP port for health check endpoint (default: 3000)
PORT=3000
